<div class="card">
  <div class="card-body">
    <h1 class="card-title"><%= @patient.name %></h1>
    <p class="card-text">Age: <%= @patient.age %></p>

    <h2 class="mt-4">Appointments</h2>
    <% if @patient.appointments.any? %>
      <ul class="list-group">
        <% @patient.appointments.each do |appointment| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= appointment.appointment_date.strftime("%B %d, %Y at %I:%M %p") %>
            <%= button_to patient_appointment_path(@patient, appointment), 
                          method: :delete, 
                          data: { confirm: 'Are you sure you want to cancel this appointment?' }, 
                          class: 'btn btn-danger btn-sm' do %>
              <i class="fas fa-times-circle me-1"></i> Cancel
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No appointments scheduled.</p>
    <% end %>

    <%= link_to new_patient_appointment_path(@patient), class: 'btn btn-primary mt-3' do %>
      <i class="fas fa-calendar-plus me-1"></i> New Appointment
    <% end %>
  </div>
</div>

<div class="mt-3">
  <%= link_to patients_path, class: 'btn btn-secondary' do %>
    <i class="fas fa-arrow-left me-1"></i> Back to Patients
  <% end %>
  <%= link_to edit_patient_path(@patient), class: 'btn btn-warning' do %>
    <i class="fas fa-edit me-1"></i> Edit Patient
  <% end %>
</div>