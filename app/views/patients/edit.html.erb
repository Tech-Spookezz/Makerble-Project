<div class="patient-form-container">
  <h1 class="mb-4"><%= @patient.new_record? ? 'Register New Patient' : 'Edit Patient' %></h1>

  <%= form_with(model: @patient, local: true, class: 'patient-form') do |form| %>
    <% if @patient.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>
        <ul>
          <% @patient.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :age, class: 'form-label' %>
      <%= form.number_field :age, class: 'form-control' %>
    </div>

    <!-- Add more fields as needed -->

    <div class="actions">
      <%= form.submit class: 'btn btn-primary' %>
      <%= link_to 'Cancel', patients_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>