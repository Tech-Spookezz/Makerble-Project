<div class="auth-page">
  <div class="auth-container">
    <div class="auth-form-container">
      <div class="auth-logo">
        <%= image_tag 'medical_logo.png', class: 'img-fluid' %>
      </div>
      <h2 class="auth-title">Welcome Back</h2>
      <p class="auth-subtitle">Log in to your MediPortal account</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'auth-form' }) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Password' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, class: 'form-check-label' %>
          </div>
        <% end %>

        <%= f.submit "Log in", class: 'btn btn-primary btn-block' %>
      <% end %>

      <div class="auth-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="auth-image">
      <%= image_tag 'medical_professionals.png', class: 'img-fluid' %>
    </div>
  </div>
</div>